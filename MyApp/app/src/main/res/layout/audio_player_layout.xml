<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/audio_player_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.daksha.myapp.AudioPlayerActivity">


    <Button
        android:onClick="play"
        android:text="RAW"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnRaw"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="43dp" />

    <Button
        android:onClick="play"
        android:text="Online"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:id="@+id/btnOnline"
        android:textAlignment="center"
        android:layout_below="@+id/btnRaw"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:onClick="play"
        android:text="Choose"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="47dp"
        android:id="@+id/btnChoose"
        android:textAlignment="center"
        android:layout_below="@+id/btnOnline"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:onClick="play"
        android:text="Reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:id="@+id/btnReset"
        android:textAlignment="center"
        android:layout_below="@+id/btnChoose"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
